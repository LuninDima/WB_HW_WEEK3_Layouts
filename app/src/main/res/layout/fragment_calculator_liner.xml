<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_liner_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/et_calculation_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_liner_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="325dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_sum_text"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_liner_clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/clock" />

        <ImageView
            android:id="@+id/iv_liner_ruler"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ruler" />

        <ImageView
            android:id="@+id/iv_liner_pie"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/pie" />

        <ImageView
            android:id="@+id/iv_liner_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="145dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/x2" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="360dp"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="#E4E4E4" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-10dp"
        android:columnCount="4"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_clear"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#D4313B"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_staples"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="( )"
            android:textColor="#68B31A"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_percent"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#68B31A"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_division"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="รท"
            android:textColor="#68B31A"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_seven"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_eight"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_nine"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_round_button"
            android:text="ร"
            android:textColor="#68B31A"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_four"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_five"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_six"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_minus"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_round_button"
            android:text="-"
            android:textColor="#68B31A"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_one"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_round_button"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_two"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_round_button"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_three"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_round_button"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_plus"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_round_button"
            android:text="+"
            android:textColor="#68B31A"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_plusminus"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_round_button"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_zero"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_round_button"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_decimal"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_round_button"
            android:text=","
            android:textColor="@color/black"
            android:textSize="36sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_liner_equals"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_round_button"
            android:backgroundTint="#68B31A"
            android:text="="
            android:textColor="@color/white"
            android:textSize="32sp" />

    </GridLayout>
</LinearLayout>