<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_liner_facebook_logo"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:srcCompat="@mipmap/facebooklogo_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tv_liner_login"
            android:layout_width="270dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#75B8EF"
            android:ems="10"
            android:hint="@string/tv_facebook_login_text"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/black"

            />

        <EditText
            android:id="@+id/tv_liner_password"
            android:layout_width="270dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button_liner_enter"
            android:layout_width="271dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:backgroundTint="#1878F3"
            android:text="Войти"
            android:textAllCaps="false"
            android:textColor="#83BEFF"
            android:textStyle="bold"
            app:iconTint="#2196F3" />

        <TextView
            android:id="@+id/tv_liner_password_recovery"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="Забыли пароль?"
            android:textColor="#145FC7"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>