<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_calculation"
        android:layout_width="373dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text="@string/et_calculation_text"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="363dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:gravity="right"
        android:text="@string/tv_sum_text"
        android:textColor="#B9B9B9"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/et_calculation"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/et_calculation"
        app:layout_constraintTop_toBottomOf="@+id/et_calculation" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="56dp"
        android:background="#E4E4E4"
        app:layout_constraintEnd_toEndOf="@+id/tv_sum"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="@+id/tv_sum"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_plus_minus"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/custom_round_button"

        android:text="+/-"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_zero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_decimal"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text=","
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_equally"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_zero"
        app:layout_constraintTop_toBottomOf="@+id/button_three" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_equally"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:backgroundTint="#68B31A"
        android:text="="
        android:textColor="#FAF9F9"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_decimal"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_zero"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="0"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_decimal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_plus_minus"
        app:layout_constraintTop_toBottomOf="@+id/button_two" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_one"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/custom_round_button"

        android:text="1"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_plus_minus"
        app:layout_constraintEnd_toStartOf="@+id/button_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_four" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_three"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="3"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_decimal"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_two"
        app:layout_constraintTop_toBottomOf="@+id/button_six" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="+"
        android:textColor="#68B31A"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/button_equally"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_three"
        app:layout_constraintTop_toBottomOf="@+id/button_minus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_two"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="2"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_zero"
        app:layout_constraintEnd_toStartOf="@+id/button_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@+id/button_five" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_four"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/custom_round_button"

        android:text="4"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_one"
        app:layout_constraintEnd_toStartOf="@+id/button_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_seven" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_six"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="6"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_three"
        app:layout_constraintEnd_toStartOf="@+id/button_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_five"
        app:layout_constraintTop_toBottomOf="@+id/button_nine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_minus"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="—"
        android:textColor="#68B31A"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_six"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_five"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="5"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_two"
        app:layout_constraintEnd_toStartOf="@+id/button_six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_four"
        app:layout_constraintTop_toBottomOf="@+id/button_eight" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_seven"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="7"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_four"
        app:layout_constraintEnd_toStartOf="@+id/button_eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_clear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_nine"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="9"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_six"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_eight"
        app:layout_constraintTop_toBottomOf="@+id/button_perception" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_multiply"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="╳"
        android:textColor="#68B31A"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_nine"
        app:layout_constraintTop_toBottomOf="@+id/button_division" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_eight"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="8"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_five"
        app:layout_constraintEnd_toStartOf="@+id/button_nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_seven"
        app:layout_constraintTop_toBottomOf="@+id/button_staples" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_division"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="÷"
        android:textColor="#68B31A"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/button_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_perception"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_perception"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="%"
        android:textColor="#68B31A"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_nine"
        app:layout_constraintEnd_toStartOf="@+id/button_division"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_staples"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_staples"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="( )"
        android:textColor="#68B31A"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_eight"
        app:layout_constraintEnd_toStartOf="@+id/button_perception"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_clear"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:background="@drawable/custom_round_button"

        android:text="C"
        android:textColor="#D4313B"
        android:textSize="@dimen/size_button_number"
        app:layout_constraintBottom_toTopOf="@+id/button_seven"
        app:layout_constraintEnd_toStartOf="@+id/button_staples"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_pie"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/x2" />

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="57dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tv_sum"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum"
        app:srcCompat="@drawable/clock" />

    <ImageView
        android:id="@+id/iv_pie"
        android:layout_width="57dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ruler"
        app:layout_constraintStart_toEndOf="@+id/iv_ruler"
        app:layout_constraintTop_toTopOf="@+id/iv_ruler"
        app:srcCompat="@drawable/pie" />

    <ImageView
        android:id="@+id/iv_ruler"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
        app:layout_constraintStart_toEndOf="@+id/iv_clock"
        app:layout_constraintTop_toTopOf="@+id/iv_clock"
        app:srcCompat="@drawable/ruler" />
</androidx.constraintlayout.widget.ConstraintLayout>